<div class = "col-md-3">
  <h2>User info</h2>

    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
      	  <th>name</th>
      	  <th><%= user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>

  <div class="row">
    <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{current_user.id}"  do%>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>

  <%= form_with model: book, url: books_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, id: 'book_title', class: 'form-control book_title' %>
    </div>

    <div class="form-group">
      <%= f.label 'book_opinion', 'opinion' %>
      <%= f.text_area :body, class: 'form-control book_body', id: 'book_body' %>
    </div>

    <div class="form-group">
      <%= f.submit "Create Book", class: 'btn btn-success' %>
    </div>

  <% end %>
</div>